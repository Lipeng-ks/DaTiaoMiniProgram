
.food-shop-container.data-v-09f1c67e {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 分类标签栏 */
.categories.data-v-09f1c67e {
  background: #ffffff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}
.category-scroll.data-v-09f1c67e {
  white-space: nowrap;
  padding: 0 20rpx;
}
.category-item.data-v-09f1c67e {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  background: #f0f0f0;
  font-size: 28rpx;
  color: #666;
}
.category-item.active.data-v-09f1c67e {
  background: #ff8f00;
  color: #ffffff;
}

/* 加载状态 */
.loading.data-v-09f1c67e {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 产品网格 */
.product-grid.data-v-09f1c67e {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
  gap: 20rpx;
}
.product-card.data-v-09f1c67e {
  width: calc(50% - 10rpx);
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}
.product-image.data-v-09f1c67e {
  width: 100%;
  height: 320rpx;
  background: #f0f0f0;
}
.product-info.data-v-09f1c67e {
  padding: 20rpx;
}
.product-name.data-v-09f1c67e {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.product-price.data-v-09f1c67e {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff8f00;
}

/* 空状态 */
.empty-state.data-v-09f1c67e {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.empty-icon.data-v-09f1c67e {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}
.empty-text.data-v-09f1c67e {
  font-size: 28rpx;
  color: #999;
}

/* 弹窗遮罩 */
.modal-overlay.data-v-09f1c67e {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

